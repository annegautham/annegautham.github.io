---
import type { CollectionEntry } from "astro:content";

interface Props {
  ashcroftNotes: CollectionEntry<"notes">[];
  current: CollectionEntry<"notes">;
}

const { ashcroftNotes, current } = Astro.props as Props;
---

<nav class="space-y-4">
  <a href="/notes/ashcroft_mermin/" class="font-semibold hover:underline">
    Ashcroft & Mermin
  </a>
  <ul class="ml-2 space-y-1">
    {
      ashcroftNotes.map(note => {
        const slug = note.slug.split("/").at(-1)!;
        const isActive = note.slug === current.slug;
        return (
          <li>
            <a
              href={`/notes/ashcroft_mermin/${slug}`}
              class={`block px-2 py-1 rounded hover:bg-skin-hover ${
                isActive ? "bg-skin-accent/20 font-bold" : ""
              }`}
            >
              {note.data.title}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
